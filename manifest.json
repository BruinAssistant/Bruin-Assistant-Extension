{
    "name": "Bruin Assistant Extension",
    "description": "Building a better UCLA experience.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "dev_features": "dev_features_background.js"
    },
    "content_scripts": [
        {
          "matches": ["*://be.my.ucla.edu/*"],
          "css": ["groupme.css"],
          "run_at": "document_end"
        },
        {
          "matches": ["*://be.my.ucla.edu/*"],
          "js": ["groupme.js", "bruinwalk.js", "timedistance.js", "jquery-3.6.0.min.js"],
          "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "settings.html",
        "default_icon": {
          "16": "/assets/get_started16.png",
          "32": "/assets/get_started32.png",
          "48": "/assets/get_started48.png",
          "128": "/assets/get_started128.png"
        }
    },
    "icons": {
        "16": "/assets/get_started16.png",
        "32": "/assets/get_started32.png",
        "48": "/assets/get_started48.png",
        "128": "/assets/get_started128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [ "assets/*" ],
            "matches": ["*://be.my.ucla.edu/*"]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://class-planner-assistant.herokuapp.com/",
        "https://www.bruinwalk.com/",
        "https://az.bruinwalk.com/"
    ]
}